<%- include('partials/_header') %>
<script>
  $(document).ready(function () {
    $(".cancel").submit(function (event) {
      event.preventDefault();
      let form = $(this);
      const id = $(event.target).closest('form').find('button').attr('id').slice(1);
      $.ajax({
        type: 'POST',
        url: `/orders/${id}`,
        data: form.serialize(),
        complete: function () {
          $card = $(event.target).closest('.card');
          $card.remove().prependTo('.completed');
          $card.find('.card-footer.pending').remove();
          $card.find('.badge').removeClass('badge-secondary').addClass('badge-danger').html("Cancelled");
        }
      })
    })

    $(".accept").submit(function (event) {
      event.preventDefault();
      let form = $(this);
      const id = $(event.target).closest('form').find('button').attr('id').slice(1);
      const $button =
        `
        <button type="button" class="btn-sm btn-outline-success float-right">
          Complete Order
        </button>
         `;

      $.ajax({
        type: 'POST',
        url: `/orders/${id}`,
        data: form.serialize(),
        complete: function () {
          $card = $(event.target).closest('.card');
          $card.remove().prependTo('.accepted');
          $card.find('.pending-buttons').html($button);
          $card.find('.badge').removeClass('badge-secondary').addClass('badge-info').html("Accepted");
        }
      })
    })
  });
</script>

<body>
  <style>
    .nav-pills .nav-link.active {
      background-color: #07a7c4;
    }

    .nav-pills .nav-link {
      color: black;
    }
  </style>
  <nav class="navbar navbar-dark sticky-top" style="background-color: #07a7c4">
    <div class="container col-9">
      <span class="navbar-brand mb-0 h1">Habitual</span>
      <span class="navbar-text">
        Welcome, Restaurant!
      </span>
      <form action="/logout" method="post">
        <input class="btn btn-outline-light" type="submit" value="Log Out" />
      </form>
    </div>
  </nav>
  <div id="body" class="container col-9 mt-3">
    <div class="row">
      <div class="col-3">
        <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
          <a class="nav-link active" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab"
            aria-controls="v-pills-home" aria-selected="true">Current Orders</a>
          <a class="nav-link" id="v-pills-profile-tab" data-toggle="pill" href="#v-pills-profile" role="tab"
            aria-controls="v-pills-profile" aria-selected="false">Completed Orders</a>
        </div>
      </div>
      <div class="col-9">
        <div class="tab-content" id="v-pills-tabContent">
          <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
            <div class="row">
              <div class="col-6">
                <% for (let order of arr) { %>
                <% if (order.status ==='pending') { %>
                <div class="card order mb-2">
                  <div class="card-header">
                    <span class="align-middle mr-1">Order #<%= order.orderid %>
                    </span>
                    <span class="badge badge-pill badge-secondary">Pending</span>
                    <span class="float-right">$<%= order.total_price/100 %></span>
                  </div>
                  <div class="card-body">
                    <ul>
                      <% for (let item of order.items) { %>
                      <li><%= item.qty %> x <%= item.name %></li>
                      <% } %>
                    </ul>
                  </div>
                  <div class="card-footer pending">
                    <div class="input-group col-5 float-right pr-0 pending-buttons" style="max-width: 13rem;">
                      <form action="/orders/<%= order.orderid %>" method="POST" class="cancel">
                        <input type="hidden" name="_method" value="PUT">
                        <input type="hidden" name="status" value="cancelled">
                        <input type="hidden" name="waitTime" value="null">
                        <button id="c<%= order.orderid %>"
                          class="btn-sm btn-outline-danger float-right mr-2 cancel_button" type="submit">
                          Cancel
                        </button>
                      </form>

                      <div class="input-group-append">
                        <form action="/orders/<%= order.orderid %>" method="POST" class="accept">
                          <input type="hidden" name="_method" value="PUT">
                          <input type="hidden" name="status" value="accepted">
                          <input type="text" class="form-control border border-info border-right-0 rounded-left"
                            placeholder="25m" name="waitTime" aria-label="Wait time" aria-describedby="button-addon2"
                            maxlength="4" size="4" required />
                          <button id="a<%= order.orderid %>"
                            class="btn-sm btn-outline-info  border border-info border-left-0 rounded-right"
                            type="submit" id="button-addon2">
                            Accept
                          </button>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
                <% } %>
                <% } %>
              </div>


              <div class="col-6 accepted">
                <% for (let order of arr) { %>
                <% if (order.status === 'accepted') { %>
                <div class="card order mb-2">
                  <div class="card-header">
                    <span class="align-middle mr-1">Order #<%= order.orderid %></span>
                    <span class="badge badge-pill badge-info">Accepted</span>
                    <span class="float-right">$<%= order.total_price/100 %></span>
                  </div>
                  <div class="card-body">
                    <ul>
                      <% for (let item of order.items) { %>
                      <li><%= item.qty %> x <%= item.name %></li>
                      <% } %>
                    </ul>
                  </div>
                  <div class="card-footer">
                    <button type="button" class="btn-sm btn-outline-success float-right">
                      Complete Order
                    </button>
                  </div>
                </div>
                <% } %>
                <% } %>
              </div>

            </div>
          </div>

          <div class="completed tab-pane fade" id="v-pills-profile" role="tabpanel"
            aria-labelledby="v-pills-profile-tab">
            <% for (let order of arr) { %>
            <% if (order.status === 'completed') { %>
            <div class="card order mb-2">
              <div class="card-header">
                <span class="align-middle mr-1">Order #<%= order.orderid %></span>
                <span class="badge badge-pill badge-success">Completed</span>
                <span class="float-right">$<%= order.total_price/100 %></span>
              </div>
              <div class="card-body">
                <ul>
                  <% for (let item of order.items) { %>
                  <li><%= item.qty %> x <%= item.name %></li>
                  <% } %>
                </ul>
              </div>
            </div>
            <% } %>
            <% } %>


            <% for (let order of arr) { %>
            <% if (order.status === 'cancelled') { %>
            <div class="card order mb-2">
              <div class="card-header">
                <span class="align-middle mr-1">Order #<%= order.orderid %></span>
                <span class="badge badge-pill badge-danger">Cancelled</span>
                <span class="float-right">$<%= order.total_price/100 %></span>
              </div>
              <div class="card-body">
                <ul>
                  <% for (let item of order.items) { %>
                  <li><%= item.qty %> x <%= item.name %></li>
                  <% } %>
                </ul>
              </div>
            </div>
            <% } %>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="/socket.io/socket.io.js"></script>
  <script src="/scripts/orders_socket.js"></script>
  <%- include('partials/_footer') %>
</body>
